<section class="px-6">
  <h1 class="text-2xl mb-4">Drama Populer</h1>

  <div class="flex gap-4 overflow-x-auto">
    <% dramas.forEach(d => { %>
      <div class="card" onclick="location.href='/detail/<%= d.shortPlayId %>'">
        <img loading="lazy" src="<%= d.shortPlayCover %>" class="rounded-xl w-40">
      </div>
    <% }) %>
  </div>
</section>
