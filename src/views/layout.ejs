<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= pageTitle || "NetShort Drama" %></title>
  <meta name="theme-color" content="#0b0f19" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: { extend: { } }
    }
  </script>
  <link rel="preconnect" href="https://awscover.netshort.com" crossorigin>
  <link rel="preconnect" href="https://awscdn.netshort.com" crossorigin>
</head>

<body class="min-h-screen bg-slate-950 text-slate-100">
  <!-- Top Bar -->
  <header class="sticky top-0 z-50 border-b border-white/10 bg-slate-950/80 backdrop-blur">
    <div class="mx-auto max-w-7xl px-4 py-3 flex items-center gap-3">
      <a href="/" data-spa class="flex items-center gap-2">
        <div class="h-9 w-9 rounded-xl bg-gradient-to-br from-indigo-500 via-fuchsia-500 to-amber-400"></div>
        <div class="leading-tight">
          <div class="font-semibold tracking-tight">NetShort</div>
          <div class="text-xs text-white/60 -mt-0.5">Drama shorts</div>
        </div>
      </a>

      <div class="flex-1"></div>

      <form id="topSearchForm" class="hidden sm:flex items-center gap-2">
        <input id="topSearchInput" name="q" placeholder="Cari drama..." autocomplete="off"
          class="w-[360px] max-w-[52vw] rounded-xl bg-white/5 border border-white/10 px-4 py-2 text-sm outline-none focus:border-white/25" />
        <button class="rounded-xl bg-white/10 hover:bg-white/15 px-3 py-2 text-sm border border-white/10">
          Search
        </button>
      </form>

      <button id="openSearchMobile"
        class="sm:hidden rounded-xl bg-white/10 hover:bg-white/15 px-3 py-2 text-sm border border-white/10">
        Cari
      </button>
    </div>
  </header>

  <!-- Social Bar + Ad Slot -->
  <div class="fixed right-3 top-24 z-40 hidden lg:flex flex-col gap-2">
    <a href="#" class="w-12 h-12 rounded-2xl bg-white/10 hover:bg-white/15 border border-white/10 flex items-center justify-center">ùïè</a>
    <a href="#" class="w-12 h-12 rounded-2xl bg-white/10 hover:bg-white/15 border border-white/10 flex items-center justify-center">TG</a>
    <a href="#" class="w-12 h-12 rounded-2xl bg-white/10 hover:bg-white/15 border border-white/10 flex items-center justify-center">IG</a>

    <!-- AD SLOT (isi script/banner kamu) -->
    <div class="mt-2 w-12 h-32 rounded-2xl bg-white/5 border border-white/10 overflow-hidden flex items-center justify-center text-xs text-white/50">
      AD
    </div>
  </div>

  <!-- Mobile Search Sheet -->
  <div id="mobileSearchSheet" class="fixed inset-0 z-[60] hidden">
    <div class="absolute inset-0 bg-black/60"></div>
    <div class="absolute left-1/2 top-16 -translate-x-1/2 w-[min(92vw,620px)] rounded-2xl border border-white/10 bg-slate-950 p-4">
      <div class="flex items-center gap-2">
        <input id="mobileSearchInput" placeholder="Cari drama..." autocomplete="off"
          class="flex-1 rounded-xl bg-white/5 border border-white/10 px-4 py-2 text-sm outline-none focus:border-white/25" />
        <button id="mobileSearchGo" class="rounded-xl bg-white/10 hover:bg-white/15 px-3 py-2 text-sm border border-white/10">Cari</button>
        <button id="mobileSearchClose" class="rounded-xl bg-white/10 hover:bg-white/15 px-3 py-2 text-sm border border-white/10">Tutup</button>
      </div>
      <div class="mt-3 text-xs text-white/60">Tip: cari ‚ÄúPewaris‚Äù, ‚ÄúBalas Dendam‚Äù, dll.</div>
    </div>
  </div>

  <!-- Main -->
  <main class="mx-auto max-w-7xl px-4 py-6">
    <div id="spaRoot">
      <%- body %>
    </div>
  </main>

  <!-- Bottom Bar -->
  <nav class="fixed bottom-0 left-0 right-0 z-50 border-t border-white/10 bg-slate-950/80 backdrop-blur">
    <div class="mx-auto max-w-7xl px-4">
      <div class="grid grid-cols-4 sm:grid-cols-5 gap-2 py-2">
        <a href="/" data-spa class="rounded-xl px-3 py-2 text-center bg-white/5 hover:bg-white/10 border border-white/10">Home</a>
        <a href="/p/search?q=" data-spa class="rounded-xl px-3 py-2 text-center bg-white/5 hover:bg-white/10 border border-white/10">Search</a>
        <a href="#" id="openHistory" class="rounded-xl px-3 py-2 text-center bg-white/5 hover:bg-white/10 border border-white/10">History</a>
        <a href="/" data-spa class="hidden sm:block rounded-xl px-3 py-2 text-center bg-white/5 hover:bg-white/10 border border-white/10">Theater</a>
        <a href="/" data-spa class="hidden sm:block rounded-xl px-3 py-2 text-center bg-white/5 hover:bg-white/10 border border-white/10">ForYou</a>
      </div>
    </div>
  </nav>

  <div class="h-24"></div>

  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script>window.__INITIAL__ = <%- JSON.stringify(initial || {}) %>;</script>
  <script src="/public/js/history.js"></script>
  <script src="/public/js/player.js"></script>
  <script src="/public/js/app.js"></script>
</body>
</html>
