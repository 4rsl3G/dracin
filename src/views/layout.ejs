<!DOCTYPE html>
<html lang="<%= typeof activeLang !== 'undefined' ? activeLang : 'en' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - StreamSimple</title>
    
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <link rel="stylesheet" href="/css/custom.css">
    
    <%- style %>
</head>
<body class="bg-gray-50 text-gray-900 font-sans antialiased">
    
    <div id="app-container" class="flex flex-col min-h-screen">
        <%- include('partials/header') %>

        <main id="main-content" class="flex-grow container mx-auto px-4 py-6 max-w-5xl fade-in">
            <%- body %>
        </main>

        <%- include('partials/footer') %>
    </div>

    <div id="info-modal" class="fixed inset-0 bg-black/50 hidden flex items-center justify-center z-50">
        <div class="bg-white rounded-lg p-6 max-w-sm w-full shadow-lg mx-4">
            <h3 class="text-lg font-bold mb-2">Notice</h3>
            <p id="modal-msg" class="text-gray-600 mb-4"></p>
            <button onclick="$('#info-modal').addClass('hidden')" class="w-full bg-gray-900 text-white py-2 rounded hover:bg-gray-800 transition">Close</button>
        </div>
    </div>

    <script src="/js/app.js"></script>
    
    <%- script %>
</body>
</html>
