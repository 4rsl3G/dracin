<% if (!data) { %>
    <div class="text-center py-20">
        <h2 class="text-2xl font-bold text-gray-800 mb-2">Unavailable</h2>
        <p class="text-gray-500"><%= error %></p>
        <a href="/show/<%= code %>" class="spa-link mt-4 inline-block px-4 py-2 bg-gray-900 text-white rounded">Back to List</a>
    </div>
<% } else { %>
    <div class="max-w-4xl mx-auto">
        <div class="relative bg-black aspect-video rounded-lg overflow-hidden shadow-lg mb-4">
            <video id="video-player" class="w-full h-full" controls playsinline></video>
        </div>

        <div class="flex flex-col md:flex-row items-start justify-between gap-4 mb-6">
            <div>
                <h1 class="text-xl font-bold text-gray-900"><%= data.name %></h1>
                <p class="text-gray-500 text-sm">Episode <%= data.episode %> of <%= data.total %></p>
            </div>
            
            <div class="flex items-center gap-3">
                <select id="quality-selector" class="text-sm bg-gray-100 border-none rounded px-3 py-2 cursor-pointer focus:ring-1 focus:ring-gray-300">
                    <option value="auto">Auto</option>
                </select>
                
                <div class="flex rounded bg-gray-100 border border-gray-200">
                    <a href="/play/<%= code %>?ep=<%= parseInt(data.episode) - 1 %>" 
                       class="spa-link px-3 py-2 text-gray-600 hover:text-gray-900 hover:bg-white <%= data.episode <= 1 ? 'pointer-events-none opacity-50' : '' %>">
                       <i class="fa-solid fa-chevron-left"></i>
                    </a>
                    <a href="/play/<%= code %>?ep=<%= parseInt(data.episode) + 1 %>" 
                       class="spa-link px-3 py-2 text-gray-600 hover:text-gray-900 hover:bg-white border-l border-gray-200 <%= data.episode >= data.total ? 'pointer-events-none opacity-50' : '' %>">
                       <i class="fa-solid fa-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="bg-blue-50 text-blue-800 text-sm px-4 py-3 rounded border border-blue-100 flex items-center justify-between">
            <span><i class="fa-regular fa-clock mr-2"></i> Link expires in:</span>
            <span id="countdown" class="font-mono font-bold" data-expires="<%= data.expires %>">--:--</span>
        </div>

        <script id="video-data" type="application/json">
            <%- JSON.stringify(data.video) %>
        </script>
    </div>
<% } %>
