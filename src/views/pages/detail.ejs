<div id="detail-view" data-book-id="<%= typeof bookId !== 'undefined' ? bookId : '' %>" class="space-y-6">
  <div id="player-container" class="hidden w-full aspect-video bg-black relative group overflow-hidden rounded-lg shadow-lg">
    <video id="main-video" class="w-full h-full object-contain" playsinline></video>
    
    <div id="watermark-overlay" class="absolute text-white/20 pointer-events-none text-sm font-bold select-none z-10 hidden">PansaDrama</div>
    
    <div id="video-controls" class="absolute bottom-0 left-0 w-full bg-gradient-to-t from-black/90 to-transparent p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-200 flex flex-col gap-2 z-20">
      
      <div class="w-full h-1 bg-white/30 cursor-pointer rounded overflow-hidden" id="seek-bar-container">
        <div id="seek-fill" class="h-full bg-white w-0 relative"></div>
      </div>

      <div class="flex items-center justify-between text-white text-sm font-medium">
        <div class="flex items-center gap-4">
          <button id="play-pause-btn" class="hover:text-gray-300">
             <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
          </button>
          
          <div class="flex items-center gap-2 group/vol">
            <button id="mute-btn" class="hover:text-gray-300">
               <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77zm-4 0h-2.5l-5 5v5.5h5l5 5v-15.5z"/></svg>
            </button>
            <input type="range" id="vol-slider" min="0" max="1" step="0.1" value="1" class="w-16 h-1 bg-white/30 rounded-lg appearance-none cursor-pointer">
          </div>

          <span id="time-display" class="font-mono text-xs opacity-80">00:00 / 00:00</span>
        </div>

        <div class="flex items-center gap-4">
          <select id="speed-select" class="bg-transparent border-none text-xs focus:ring-0 cursor-pointer">
            <option value="0.5">0.5x</option>
            <option value="1.0" selected>1.0x</option>
            <option value="1.5">1.5x</option>
            <option value="2.0">2.0x</option>
          </select>
          <button id="theater-btn" class="hover:text-gray-300">T</button>
          <button id="fullscreen-btn" class="hover:text-gray-300">
            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24"><path d="M7 14H5v5h5v-2H7v-3zm-2-4h2V7h3V5H5v5zm12 7h-3v2h5v-5h-2v3zM14 5v2h3v3h2V5h-5z"/></svg>
          </button>
        </div>
      </div>
    </div>
    
    <div id="player-status" class="absolute inset-0 flex items-center justify-center bg-black/50 z-0">
      <div class="loader w-8 h-8 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
    </div>
  </div>

  <div id="book-info" class="p-1">
    <div class="h-6 w-1/2 bg-gray-200 dark:bg-gray-800 rounded animate-pulse mb-2"></div>
    <div class="h-4 w-3/4 bg-gray-200 dark:bg-gray-800 rounded animate-pulse"></div>
  </div>

  <div class="border-t border-gray-200 dark:border-gray-800 pt-4">
    <h3 class="font-bold mb-3">Chapters</h3>
    <div id="chapter-list" class="grid grid-cols-4 md:grid-cols-6 gap-2 max-h-60 overflow-y-auto">
      </div>
  </div>
</div>
