<div class="max-w-4xl mx-auto">
    <div class="flex flex-col md:flex-row gap-6 mb-8 items-start">
        <div class="w-32 md:w-48 aspect-[3/4] bg-gray-200 rounded-lg shrink-0 overflow-hidden shadow-sm border border-gray-200">
             <div class="w-full h-full flex items-center justify-center bg-gray-100 text-gray-400">
                <i class="fa-solid fa-film text-4xl"></i>
             </div>
        </div>
        <div class="flex-grow pt-2">
            <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2"><%= meta.name %></h1>
            <div class="flex items-center gap-4 text-sm text-gray-500 mb-4">
                <span><i class="fa-solid fa-list-ol mr-1"></i> <%= meta.total %> Episodes</span>
                <span class="px-2 py-0.5 bg-gray-100 rounded text-xs border border-gray-200">HD</span>
            </div>
            <p class="text-gray-600 text-sm leading-relaxed max-w-xl">
                Watch full episodes of <%= meta.name %>. Stream high-quality content instantly.
            </p>
        </div>
    </div>

    <hr class="border-gray-200 mb-6">

    <h3 class="text-lg font-semibold mb-4 text-gray-800">Episodes</h3>
    <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-3">
        <% episodes.forEach(function(ep) { %>
            <% if (ep.locked) { %>
                <button onclick="showLockedModal()" class="relative block text-center p-3 rounded bg-gray-50 border border-gray-200 text-gray-400 cursor-pointer hover:bg-gray-100 transition">
                    <span class="text-lg font-bold">Ep <%= ep.episode %></span>
                    <div class="absolute top-1 right-2">
                        <i class="fa-solid fa-lock text-xs"></i>
                    </div>
                </button>
            <% } else { %>
                <a href="/play/<%= code %>?ep=<%= ep.episode %>" class="spa-link block text-center p-3 rounded bg-white border border-gray-300 text-gray-900 hover:border-gray-900 hover:shadow-sm transition">
                    <span class="text-lg font-bold">Ep <%= ep.episode %></span>
                </a>
            <% } %>
        <% }); %>
    </div>
</div>
