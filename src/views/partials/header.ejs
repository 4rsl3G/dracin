<header class="bg-white border-b border-gray-200 sticky top-0 z-40">
    <div class="container mx-auto px-4 h-16 flex items-center justify-between max-w-5xl">
        <a href="/" class="spa-link text-xl font-bold tracking-tight text-gray-900">
            PANSA<span class="text-gray-400">DRAMA</span>
        </a>

        <div class="flex items-center gap-3">
            <form action="/" method="GET" class="hidden sm:block relative" id="search-form">
                <input type="text" name="q" placeholder="Search..." 
                    class="pl-3 pr-8 py-1.5 text-sm border border-gray-300 rounded-md focus:outline-none focus:border-gray-900 w-48 transition-all"
                    value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                <button type="submit" class="absolute right-2 top-1.5 text-gray-400 hover:text-gray-900">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </form>

            <select id="lang-select" class="text-sm border-none bg-gray-100 rounded px-2 py-1.5 cursor-pointer focus:ring-0">
                <% languages.forEach(function(l) { %>
                    <option value="<%= l.code %>" <%= activeLang === l.code ? 'selected' : '' %>>
                        <%= l.code.toUpperCase() %>
                    </option>
                <% }); %>
            </select>
        </div>
    </div>
    <div class="sm:hidden px-4 pb-3 border-b border-gray-100">
        <form action="/" method="GET" id="mobile-search-form" class="relative">
            <input type="text" name="q" placeholder="Search title..." 
                class="w-full pl-3 pr-8 py-2 text-sm border border-gray-200 rounded bg-gray-50 focus:bg-white focus:border-gray-400 outline-none">
            <button type="submit" class="absolute right-3 top-2 text-gray-400">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </form>
    </div>
</header>
