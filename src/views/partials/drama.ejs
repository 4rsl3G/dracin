<div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
  <aside class="lg:col-span-4 space-y-4">
    <div class="rounded-3xl border border-white/10 bg-white/5 overflow-hidden">
      <div class="aspect-[3/4] overflow-hidden">
        <img src="<%= drama.shortPlayCover %>" class="h-full w-full object-cover" loading="lazy" />
      </div>
      <div class="p-4">
        <div class="text-lg font-semibold leading-snug"><%= drama.shortPlayName %></div>
        <div class="mt-2 flex flex-wrap gap-1">
          <% (drama.shortPlayLabels || []).slice(0,6).forEach(l => { %>
            <span class="rounded-full border border-white/10 bg-white/5 px-2 py-0.5 text-[11px] text-white/70"><%= l %></span>
          <% }) %>
        </div>
        <div class="mt-3 text-sm text-white/70 leading-relaxed"><%= safeText(drama.shotIntroduce, 360) %></div>

        <div class="mt-4 grid grid-cols-2 gap-2 text-xs text-white/70">
          <div class="rounded-2xl border border-white/10 bg-white/5 p-3">
            <div class="text-white/50">Episode</div>
            <div class="text-base font-semibold text-white"><%= drama.totalEpisode %></div>
          </div>
          <div class="rounded-2xl border border-white/10 bg-white/5 p-3">
            <div class="text-white/50">Status</div>
            <div class="text-base font-semibold text-white"><%= drama.isFinish ? "Tamat" : "Ongoing" %></div>
          </div>
        </div>

        <button id="btnPlayContinue"
          data-shortplay="<%= drama.shortPlayId %>"
          class="mt-4 w-full rounded-2xl bg-gradient-to-r from-indigo-500 via-fuchsia-500 to-amber-400 px-4 py-3 text-sm font-semibold text-slate-950">
          Lanjutkan Menonton
        </button>

        <div class="mt-3 rounded-2xl border border-white/10 bg-white/5 p-3 text-xs text-white/60">
          Slot Ad (isi script/banner kamu).
        </div>
      </div>
    </div>
  </aside>

  <section class="lg:col-span-8 space-y-4">
    <div class="rounded-3xl border border-white/10 bg-white/5 p-5 flex items-center justify-between gap-3">
      <div>
        <div class="text-xl font-semibold">Daftar Episode</div>
        <div class="text-sm text-white/60">Infinite scroll + auto next</div>
      </div>
      <button id="btnClearProgress" class="rounded-xl bg-white/10 hover:bg-white/15 px-3 py-2 text-sm border border-white/10">
        Reset Progress
      </button>
    </div>

    <div id="episodeList"
         class="grid grid-cols-1 sm:grid-cols-2 gap-3"
         data-episodes="<%= encodeURIComponent(JSON.stringify(episodes || [])) %>"
         data-shortplay="<%= drama.shortPlayId %>">
      <!-- diisi via JS chunk render + infinite scroll -->
    </div>

    <div class="h-10"></div>
  </section>
</div>

<!-- Player Modal -->
<div id="playerModal" class="fixed inset-0 z-[80] hidden">
  <div class="absolute inset-0 bg-black/70"></div>
  <div class="absolute left-1/2 top-8 -translate-x-1/2 w-[min(94vw,980px)]">
    <div class="rounded-3xl border border-white/10 bg-slate-950 overflow-hidden">
      <div class="flex items-center justify-between gap-2 p-3 border-b border-white/10">
        <div class="min-w-0">
          <div id="playerTitle" class="truncate text-sm font-semibold">Player</div>
          <div id="playerMeta" class="text-xs text-white/60 truncate"></div>
        </div>
        <div class="flex items-center gap-2">
          <button id="btnPrevEp" class="rounded-xl bg-white/10 hover:bg-white/15 px-3 py-2 text-xs border border-white/10">Prev</button>
          <button id="btnNextEp" class="rounded-xl bg-white/10 hover:bg-white/15 px-3 py-2 text-xs border border-white/10">Next</button>
          <button id="btnClosePlayer" class="rounded-xl bg-white/10 hover:bg-white/15 px-3 py-2 text-xs border border-white/10">Close</button>
        </div>
      </div>
      <div class="p-3">
        <video id="videoEl" class="w-full rounded-2xl bg-black" controls playsinline preload="metadata"></video>

        <div class="mt-3 grid grid-cols-1 md:grid-cols-3 gap-3">
          <div class="md:col-span-2 rounded-2xl border border-white/10 bg-white/5 p-3 text-xs text-white/70">
            Auto next saat video selesai. Progress disimpan di History.
          </div>
          <div class="rounded-2xl border border-white/10 bg-white/5 p-3 text-xs text-white/60 flex items-center justify-center">
            AD SLOT
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  window.__DRAMA_READY__ = true;
</script>
