<div class="space-y-8">
  <section class="rounded-3xl border border-white/10 bg-gradient-to-br from-white/5 to-transparent p-5">
    <div class="flex items-end justify-between gap-3">
      <div>
        <div class="text-xl font-semibold tracking-tight">Theater</div>
        <div class="text-sm text-white/60">Kategori drama & rekomendasi</div>
      </div>
      <button id="btnReloadHome"
        class="rounded-xl bg-white/10 hover:bg-white/15 px-3 py-2 text-sm border border-white/10">Reload</button>
    </div>
  </section>

  <section id="theaterSections" class="space-y-10">
    <% if (!theaters || theaters.length === 0) { %>
      <div class="rounded-2xl border border-white/10 bg-white/5 p-5 text-white/70">
        Tidak ada data theater.
      </div>
    <% } %>

    <% theaters.forEach(group => { %>
      <div class="space-y-3">
        <div class="flex items-center justify-between">
          <div>
            <div class="text-lg font-semibold"><%= group.contentName %></div>
            <div class="text-xs text-white/50">Heat / populer / rekomendasi</div>
          </div>
        </div>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3"
             data-infinite-grid
             data-items="<%= encodeURIComponent(JSON.stringify(group.contentInfos || [])) %>">
          <!-- diisi via JS: chunk render + infinite scroll -->
        </div>

        <div class="h-6"></div>
      </div>
    <% }) %>
  </section>
</div>

<script>
  // hint ke app.js agar render initial chunks saat partial termuat
  window.__HOME_READY__ = true;
</script>
